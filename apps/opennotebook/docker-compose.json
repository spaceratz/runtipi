{
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/dynamic-compose.json",
  "services": [
    {
      "name": "opennotebook",
      "image": "ghcr.io/lfnovo/open-notebook:v1-latest-single",
      "restart": "always",
      "isMain": true,
      "internalPort": 8502,
      "environment": [
        {
          "key": "OPENAI_API_KEY",
          "value": "${OPENAI_API_KEY}"
        },
        {
          "key": "API_URL",
          "value": "http://172.29.5.37:5055"
        },
        {
          "key": "SURREAL_URL",
          "value": "ws://localhost:8000/rpc"
        },
        {
          "key": "SURREAL_USER",
          "value": "root"
        },
        {
          "key": "SURREAL_PASSWORD",
          "value": "root"
        },
        {
          "key": "SURREAL_NAMESPACE",
          "value": "open_notebook"
        },
        {
          "key": "SURREAL_DATABASE",
          "value": "production"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/notebook_data",
          "containerPath": "/app/data"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/surreal_data",
          "containerPath": "/mydata"
        }
      ],
      "addPorts": [
        {
          "containerPort": 5055,
          "hostPort": 5055,
          "tcp": true
        }
      ]
    }
  ]
}
