{
  "services": [
    {
      "name": "opennotebook",
      "image": "ghcr.io/lfnovo/open_notebook:v1-latest-single",
      "restart": "always",
      "isMain": true,
      "internalPort": 8502,
      "environment": {
        "OPENAI_API_KEY": "${OPENAI_API_KEY}",
        "API_URL": "http://172.29.5.37:5055",
        "SURREAL_URL": "ws://localhost:8000/rpc",
        "SURREAL_USER": "root",
        "SURREAL_PASSWORD": "root",
        "SURREAL_NAMESPACE": "open_notebook",
        "SURREAL_DATABASE": "production"
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/notebook_data",
          "containerPath": "/app/data"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/surreal_data",
          "containerPath": "/mydata"
        }
      ],
      "addPorts": [
        {
          "containerPort": 5055,
          "hostPort": 5055,
          "tcp": true
        }
      ]
    }
  ]
}
