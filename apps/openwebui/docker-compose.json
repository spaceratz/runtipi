{
  "$schema": "../dynamic-compose-schema.json",
  "services": [
    {
      "name": "openwebui",
      "image": "ghcr.io/open-webui/open-webui:main",
      "isMain": true,
      "internalPort": 3000,
      "environment": {
        "OPENAI_API_KEY": "${OPENAI_API_KEY}"
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/open-webui",
          "containerPath": "/app/backend/data"
        }
      ]
    }
  ]
}
